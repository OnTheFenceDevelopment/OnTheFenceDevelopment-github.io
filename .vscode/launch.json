{
    "version": "2.0.0",
    "configurations": [
      {
          "name": "Serve in Chrome",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:4000",
          "webRoot": "${workspaceFolder}",
          "sourceMaps": true,
          "sourceMapPathOverrides": {
              "webpack:///./src/*": "${workspaceFolder}/src/*"
          },
          "preLaunchTask": "serve"
        }
    ]
  }